<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="homeStyle.css">
</head>
<body>
   <div class="container">
        <aside class="sidebar">
            <nav>
                <center><h3>INSERT LOGO HERE</h3></center>
                <center><h3> Readify Navigation</h3></center>
                <ul>
                    <li><a href="home">Home</a></li>
                    <li><a href="Leaderboard">Leaderboard</a></li>
                    <li><a href="PassageCreation">Create Passage</a></li>
                    <li><a href="testUI">Take a Test</a></li>
                </ul>
            </nav>
            </aside>

        <main class="content"><div class="profile-container">
            <h1>Community Leaderboard</h1>
            <% allUsers.forEach(user => { %>
                <section class="user-section">
                    <h2>Welcome <%= user.name %></h2>
                    <div class="achievement-grid">
                        <% if (user.achievements.length > 0) { %>
                            <% user.achievements.forEach(ach => { %>
                                <div class="badge">
                                    <strong><%= ach.title %></strong> 
                                    <span>(<%= ach.earnedAt.toLocaleDateString() %>)</span>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>No achievements yet.</p>
                        <% } %>
                    </div>
                </section>
            <% }) %>
        </main>
    </div>
</body>
</html>